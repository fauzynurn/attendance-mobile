<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/item"
android:layout_marginTop="15dp"
app:cardCornerRadius="7dp"
app:strokeColor="@color/grey"
app:strokeWidth="1dp"
android:layout_width="match_parent"
android:layout_height="70dp">
<RelativeLayout
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
>
    <LinearLayout
            android:layout_centerVertical="true" android:id="@+id/time_container" android:orientation="vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
                android:fontFamily="@font/productsansregular"
                android:textColor="@color/black"
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
        />
        <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/productsansregular"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:id="@+id/sd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="s/d"
        />
        <TextView
                android:fontFamily="@font/productsansregular"
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toEndOf="@id/time_container"
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content">
        <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/productsansmedium"
                android:id="@+id/matkul"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama_matkul"
        />
        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textColor="@color/black"
                    android:fontFamily="@font/productsansmedium"
                    android:id="@+id/jenis_matkul"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jenis_matkul"/>
            <View
                    android:layout_gravity="center"
                    android:id="@+id/circle"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/grey"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
            />
            <TextView
                    android:fontFamily="@font/productsansregular"
                    android:id="@+id/status_matkul"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="none"
            />
        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:id="@+id/presence_button"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_right_grey_400_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
</RelativeLayout>

</com.google.android.material.card.MaterialCardView>
