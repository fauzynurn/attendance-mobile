<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="7dp"
        app:strokeColor="@color/grey"
        app:strokeWidth="1dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/the_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    >
        <LinearLayout
                android:layout_centerVertical="true" android:id="@+id/time_container" android:orientation="vertical"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView
                    android:fontFamily="@font/productsansregular"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
            />
            <View
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/sd"
                    android:background="@color/darkerGrey"
                    android:layout_width="2dp"
                    android:layout_height="38dp"
            />
            <TextView
                    android:fontFamily="@font/productsansregular"
                    android:id="@+id/end_time"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_toEndOf="@id/time_container"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_height="wrap_content">
            <TextView
                    android:textColor="@color/black"
                    android:fontFamily="@font/productsansmedium"
                    android:id="@+id/matkul"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nama_matkul"
            />
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:textColor="@color/darkerGrey"
                        android:fontFamily="@font/productsansmedium"
                        android:id="@+id/jenis_matkul"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="jenis_matkul"/>
                <View
                        android:layout_gravity="center"
                        android:id="@+id/circle"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/grey"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                />
                <TextView
                        android:fontFamily="@font/productsansregular"
                        android:id="@+id/kelas"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="none"
                />
            </LinearLayout>
            <TextView
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/productsansregular"
                    android:id="@+id/jwlpengganti_tglpengganti"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dd-MM-yyyy"
            />
            <LinearLayout android:layout_marginTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textColor="@color/darkerGrey" android:fontFamily="@font/productsansmedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dibuat pada "/>
                <TextView android:id="@+id/tglkuliah" android:layout_marginStart="2dp" android:textColor="@color/darkerGrey" android:fontFamily="@font/productsansmedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="dd-MM-yyyy"/>
            </LinearLayout>
        </LinearLayout>
        <com.github.rahatarmanahmed.cpv.CircularProgressView
                android:id="@+id/jwlpengganti_item_loading_view"
                android:visibility="gone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:cpv_animAutostart="true"
                app:cpv_indeterminate="true"/>
        <ImageView android:id="@+id/delete_icon" android:layout_centerVertical="true" android:layout_alignParentEnd="true" android:src="@drawable/ic_garbage" android:layout_width="25dp" android:layout_height="25dp"/>
    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/grey" android:layout_below="@id/the_content"/>

</RelativeLayout>