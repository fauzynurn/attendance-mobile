<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <com.github.vipulasri.timelineview.TimelineView
            android:id="@+id/timeline"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            app:markerSize="35dp"
            app:lineWidth="7dp"
            app:linePadding="8dp"
            app:startLineColor="@color/grey"
            app:endLineColor="@color/grey"/>

    <LinearLayout
            android:orientation="vertical" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/productsansbold"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:id="@+id/session_text" android:text="Sesi ke-" android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
                android:fontFamily="@font/productsansbold"
                android:layout_marginStart="20dp"
                android:textColor="#727272"
                android:textSize="15sp"
                android:id="@+id/session_time" android:text="00:00 - 00:00" android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>