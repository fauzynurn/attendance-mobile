<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/parent_login"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/welcome"
                android:layout_marginBottom="20dp"
                android:textSize="35sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsansregular"
                android:text="Welcome"/>
        <TextView
                android:id="@+id/subtitle"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_below="@id/login_switcher"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsanslight"
                android:text="Silahkan masukkan NIM dan password anda"/>
        <LinearLayout
                android:id="@+id/login_switcher" android:layout_below="@id/welcome" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mhs_tab"
                    android:checkable="true"
                    app:checkedIcon="@drawable/checked_icon"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="1dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    android:minHeight="120dp">
                <LinearLayout android:layout_gravity="center" android:orientation="vertical"
                              android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/student_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/backpack"
                    />
                    <TextView
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mahasiswa"
                            android:fontFamily="@font/productsansregular"

                    />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/dosen_tab"
                    android:checkable="true"
                    app:checkedIcon="@drawable/checked_icon"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="1dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    android:minHeight="120dp">
                <LinearLayout android:layout_gravity="center" android:orientation="vertical"
                              android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/professor_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/teacher"
                    />
                    <TextView
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dosen"
                            android:fontFamily="@font/productsansregular"

                    />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <RelativeLayout
                android:id="@+id/mhs_login_form"
                android:layout_marginTop="20dp"
                android:layout_below="@id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nim_field"
                    android:layout_width="wrap_content"
                    android:hint="NIM"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="273dp"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/kddsn_field"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:hint="Kode dosen"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="273dp"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pass_field"
                    android:layout_below="@id/nim_field"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:hint="Password"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="273dp"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
        <com.google.android.material.button.MaterialButton
                android:layout_marginTop="15dp"
                app:cornerRadius="4dp"
                android:layout_below="@id/mhs_login_form"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textSize="14sp"
                android:fontFamily="@font/productsansbold"
                app:backgroundTint="#3456DF"
                android:textColor="#FFFFFF"
                android:id="@+id/next_btn"
                android:layout_marginBottom="18dp"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Lanjutkan"/>
    </RelativeLayout>
</RelativeLayout>